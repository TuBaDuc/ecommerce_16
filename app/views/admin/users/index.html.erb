<% provide :title, t(".title") %>
<h2 class="center"><span class="glyphicon glyphicon-user"></span><%= t ".title" %></h2>
<div class="row">
  <div class="col-md-3 pull-right">
    <%= search_form_for @search, url: admin_users_path, class: "navbar-form" do |f| %>
    <%= f.label :display %>
    <%= select_tag :limit,
      options_from_collection_for_select(Settings.admin.user.page_items_limit,
        :second, :second, selected: params[:limit]), class: "form-control",
      id: "items-limit" %>
    <%= f.label :records %>
    <%= f.submit "", class: "invisible" %>
    <% end %>
  </div>

  <div class="col-md-3">
    <%= search_form_for @q, url: admin_users_path, class: "navbar-form",role: "search" do |f| %>
      <div class="input-group add-on">
        <%= f.text_field :name_or_email_cont, class: "form-control", placeholder: t(".name_or_email") %>
        <div class="input-group-btn">
          <%= button_tag class: "btn btn-default" do %>
            <span class="glyphicon glyphicon-search"></span>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th class="text-left">
        <%= t ".number" %>
      </th>
      <th class="text-left">
        <%= t ".name" %>
      </th>
      <th class="text-left">
        <%= t ".email" %>
      </th>
      <th class="text-left">
        <%= t ".sign_in_count" %>
      </th>
      <th class="text-left">
        <%= t ".created_at" %>
      </th>
      <th class="text-center">
        <%= t ".option" %>
      </th>
    </tr>
  </thead>
  <tbody id="list">
    <%= render @users %>
  </tbody>
</table>
<div id="paging" class="text-center">
  <%= paginate @users, remote: true %>
</div>
