<div id="add-order-modal" class="modal fade">
  <div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal">&times;</button>
          <h4 class="modal-title">
            <%= t ".title" %>
          </h4>
        </div>
        <div class="modal-body">
          <table class="table-condensed">
            <tr>
              <th><%= t ".code" %></th>
              <td><%= @order.code %></td>
            </tr>
            <tr>
              <th><%= t ".status" %></th>
              <td><%= @order.status.humanize %></td>
            </tr>
          </table>
          <%= label_tag :detail, t(".detail"), class: "label label-info" %>
          <table class="table table-striped table-hover">
            <thead>
              <tr>
                <th class="text-left">
                  <%= t ".product_name" %>
                </th>
                <th class="text-left">
                  <%= t ".quantity" %>
                </th>
                <th class="text-left">
                  <%= t ".price" %>
                </th>
              </tr>
            </thead>
            <tbody id="list">
              <% @order.order_details.each do |detail| %>
                <tr>
                  <td class="text-left">
                    <%= detail.product_name %>
                  </td>
                  <td class="text-left">
                    <%= detail.quantity %>
                  </td>
                  <td class="text-left">
                    <%= detail.price %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
        <div class="modal-footer">
          <button class="btn btn-primary" data-dismiss="modal">
            <%= t ".ok" %>
          </button>
        </div>
    </div>
  </div>
</div>
