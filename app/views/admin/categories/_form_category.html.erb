<div id="add-category-modal" class="modal fade">
  <div class="modal-dialog">
    <div class="modal-content">
      <%= form_for [:admin, @category], remote: true do |f| %>
        <div class="modal-body">
          <div>
            <label><%= t ".parent_category" %></label>
            <%= f.select :parent_id,
              nested_set_options(Category, @category) {|cat| "#{'-' * cat.level} #{cat.name}"},
              {include_blank: t(".none")},
              {class: "select form-control", id: "parent_category"} %>
          </div>
          </br>
          <div>
            <label><%= t ".name" %> <span class="text-danger">*</span></label>
            <%= f.text_field :name, class: "form-control",
              placeholder: t(".required") %>
          </div>
          </br>
          <div>
            <label><%= t ".description" %></label>
            <%= f.text_area :description, class: "form-control" %>
          </div>
        </div>
        <div class="modal-footer">
          <button class="btn btn-default" data-dismiss="modal">
            <%= t ".cancel" %>
          </button>
          <% if @category.new_record? %>
            <%= f.submit t(".add"), class: "btn btn-primary" %>
          <% else %>
            <%= f.submit t(".update"), class: "btn btn-primary" %>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>
