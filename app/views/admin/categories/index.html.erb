<% provide :title, t(".title") %>
<h2 class="center">
  <span class="glyphicon glyphicon-th-list"></span> <%= t ".title" %>
</h2>
<div class="row">
  <div class="col-md-3 pull-right">
    <%= search_form_for @search, url: admin_categories_path,
      class: "navbar-form" do |f| %>
    <%= f.label :display %>
    <%= select_tag :limit,
      options_from_collection_for_select(Settings.admin.user.page_items_limit,
        :second, :second, selected: params[:limit]),
      class: "form-control", id: "items-limit" %>
    <%= f.label :records %>
    <%= f.submit "", class: "invisible" %>
    <% end %>
  </div>

  <div class="col-md-3">
    <%= search_form_for @q, url: admin_categories_path,
      class: "navbar-form", role: "search" do |f| %>
      <div class="input-group add-on">
        <%= f.text_field :name_cont, class: "form-control",
          placeholder: t(".name_search") %>
        <div class="input-group-btn">
          <%= button_tag class: "btn btn-default" do %>
            <span class="glyphicon glyphicon-search"></span>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
  <div class="col-md-2 navbar-form">
      <%= link_to new_admin_category_path, remote: true,
        class: "btn btn-success" do %>
        <span class="glyphicon glyphicon-plus-sign"></span>
        <%= t ".add_new_category" %>
      <% end %>
  </div>
</div>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th class="text-left">
        <%= t ".number" %>
      </th>
      <th class="text-left">
        <%= t ".name" %>
      </th>
      <th class="col-md-4 text-left">
        <%= t ".description" %>
      </th>
      <th class="text-left">
        <%= t ".total_products" %>
      </th>
      <th class="text-left">
        <%= t ".created_at" %>
      </th>
      <th class="text-center">
        <%= t ".option" %>
      </th>
    </tr>
  </thead>
  <tbody id="list">
    <%= render @categories %>
  </tbody>
</table>
<div id="paging" class="text-center">
  <%= paginate @categories, remote: true %>
</div>
