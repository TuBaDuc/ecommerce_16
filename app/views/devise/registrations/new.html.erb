<h2><%= t ".sign_up" %></h2>

<%= form_for resource, as: resource_name,
  url: registration_path(resource_name), html: {multipart: true} do |f| %>
  <%= devise_error_messages! %>

  <div class="field form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: "form-control", autofocus: true %>
  </div>

  <div class="field form-group">
    <%= f.label :email %>
    <%= f.email_field :email, class: "form-control", autofocus: true %>
  </div>

  <div class="field form-group">
    <%= f.label :password %>
    <% if @minimum_password_length %>
      <em>
        <%= t ".msg_characters_minimum", number: @minimum_password_length %>
      </em>
    <% end %>
    <%= f.password_field :password, class: "form-control", autocomplete: "off" %>
  </div>

  <div class="field form-group">
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation, class: "form-control", autocomplete: "off" %>
  </div>

  <div class="field form-group">
    <%= f.label :address %>
    <%= f.text_field :address, class: "form-control", autofocus: true %>
  </div>

  <div class="field form-group">
    <%= f.label :phone %>
    <%= f.text_field :phone, class: "form-control", autofocus: true %>
  </div>

  <div class="field form-group">
    <%= f.label :photo %>
    <div class="input-group">
      <span class="input-group-btn">
        <span class="btn btn-small btn-primary btn-inverse" id="choose_photo">
          <%= t ".choose_photo" %>
        </span>
        <%= f.file_field :photo, class: "invisible", id: "image_field",
          accept: Settings.user.photo_format %>
      </span>
      <span class="form-control" id="photo_name"></span>
    </div>
  </div>

  <div class="actions text-center">
    <%= f.submit t(".sign_up"), class: "btn btn-primary" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
