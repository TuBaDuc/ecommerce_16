<div class="row">
  <div class="col-md-12">
    <ul class="nav nav-tabs">
      <li class="col-sm-3">
        <a data-toggle="tab" href="#cart-info"><%= t ".cart-info" %></a>
      </li>
      <li class="active col-sm-3">
        <a href="#ship-info" data-toggle="tab"><%= t ".ship-info" %></a>
      </li>
    </ul>
  </div>
  <div class="tab-content">
    <div id="cart-info" class="tab-pane fade col-sm-12">
      <table class="table">
        <thead>
        <tr>
          <th><%= t ".code" %></th>
          <th><%= t ".product_name" %></th>
          <th><%= t ".photo" %></th>
          <th><%= t ".price" %></th>
          <th><%= t ".quantity" %></th>
          <th><%= t ".total_price" %></th>
        </tr>
        </thead>
        <% @product_carts.each do |product, cart_params| %>
          <% unless product.nil? %>
            <%= render "orders/product_order", product: product,
              cart_params: cart_params %>
          <% end %>
        <% end %>
        <tr>
          <td colspan="6">
            <h2>
              <span class="label label-danger">
                <%= t ".total_pay" %>: <%= @total_pay %>
              </span>
            </h2>
          </td>
        </tr>
      </table>
    </div>
    <div id="ship-info" class="tab-pane fade in active col-sm-12">
      <%= form_tag orders_path, method: :post do %>
        <div>
          <%= label_tag :name %>
          <%= text_field_tag :name, @user.name, readonly: true,
            class: "form-control" %>
        </div>
        <div>
          <%= label_tag :email %>
          <%= text_field_tag :email, @user.email, readonly: true,
            class: "form-control"  %>
        </div>
        <div>
          <%= label_tag :phone %>
          <%= text_field_tag :phone, params[:phone], value: @user.phone,
            class: "form-control"  %>
        </div>
        <div>
          <%= label_tag :ship_address %>
          <%= text_field_tag :ship_address, params[:ship_address],
            value: @user.address, class: "form-control" %>
        </div>
        </br>
        <div class="text-center">
          <%= submit_tag t(".finish_checkout"), class: "btn btn-success" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
