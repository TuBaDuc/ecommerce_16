<% provide :title, t(".title") %>
<div class="row">
  <div class="col-md-12">
    <div class="carousel slide multi-item-carousel" id="theCarousel">
      <div class="carousel-inner">
        <% @carousel.each_with_index do |product, index| %>
          <% if index == 0 %>
            <div class="item active">
              <div class="col-xs-4">
                <%= link_to product_path(product.id),
                  size: Settings.carousel_photo_size do %>
                <%= image_tag product.photo.present? ? product.photo : "default.jpg",
                  class: "img-responsive", data: {caption: product.description},
                  size: Settings.carousel_photo_size %>
                <% end %>
              </div>
            </div>
          <% else %>
            <div class="item">
              <div class="col-xs-4">
                <%= link_to product_path(product.id) do %>
                <%= image_tag product.photo.present? ? product.photo : "default.jpg",
                  class: "img-responsive", data: {caption: product.description},
                  size: Settings.carousel_photo_size %>
                <% end %>
              </div>
            </div>
          <% end %>
        <% end %>
      </div>
      <a class="left carousel-control" href="#theCarousel" data-slide="prev"><i class="glyphicon glyphicon-chevron-left"></i></a>
      <a class="right carousel-control" href="#theCarousel" data-slide="next"><i class="glyphicon glyphicon-chevron-right"></i></a>
    </div>
  </div>
</div>
<div class="divider"></div>
<div class="row">
  <h2 class="title">
    <%= t ".newest_products" %>
  </h2>
  <%= render @newest_products %>
</div>
<div class="divider"></div>
<div class="row">
  <h2 class="title">
    <%= t ".hot_trends" %>
  </h2>
  <%= render @hot_trend_products %>
</div>
<% if @recent_products.present? %>
<div class="divider"></div>
  <div class="row">
    <h2><%= t ".recent_view" %></h2>
    <%= render @recent_products %>
  </div>
<% end %>
